.flexspace-and-center
  %dl.flex-150
    %dt Key
    %dd
      %strong= security_scheme.key
  %dl.flex-150
    %dt Type
    %dd
      %strong= security_scheme.security_scheme_type
  %dl.flex
    %dt Description
    %dd{class: 'markdown'}
      %vue-markdown{source: security_scheme.description}
  .btn-group{ role: "group" }
    = link_to 'Edit', edit_project_security_scheme_path(project, security_scheme), class: 'btn btn-primary' if user.can_edit? security_scheme
    = link_to 'Delete', project_security_scheme_path(project, security_scheme), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' if user.can_delete? security_scheme
